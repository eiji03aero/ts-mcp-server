{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "types": ["node"],
    "outDir": "./lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}